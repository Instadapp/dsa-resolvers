{
  "name": "@instadapp/solidity-template",
  "description": "Resolver Contracts of InstaDapp",
  "version": "1.0.0",
  "author": {
    "name": "Daksh Miglani <hello@dak.sh>",
    "url": "https://instadapp.com"
  },
  "devDependencies": {
    "@codechecks/client": "^0.1.10",
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@ethersproject/abi": "^5.2.0",
    "@ethersproject/abstract-signer": "^5.2.0",
    "@ethersproject/bignumber": "^5.2.0",
    "@ethersproject/bytes": "^5.2.0",
    "@ethersproject/contracts": "^5.2.0",
    "@ethersproject/providers": "^5.2.0",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-waffle": "^2.0.6",
    "@typechain/ethers-v5": "^11.1.2",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.11",
    "@types/chai-as-promised": "^7.1.8",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.10.4",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "chai": "^4.3.10",
    "chai-as-promised": "^7.1.1",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv": "^16.3.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "ethereum-waffle": "^4.0.10",
    "ethers": "^5.7.2",
    "fs-extra": "^10.0.0",
    "hardhat": "^2.19.2",
    "hardhat-gas-reporter": "^1.0.9",
    "inquirer": "^8.2.6",
    "prettier": "^3.1.1",
    "prettier-plugin-solidity": "^1.2.0",
    "shelljs": "^0.8.5",
    "solhint": "^4.0.0",
    "solhint-plugin-prettier": "^0.1.0",
    "solidity-coverage": "^0.8.5",
    "ts-generator": "^0.1.1",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "~5.3.3"
  },
  "files": [
    "/contracts"
  ],
  "keywords": [
    "blockchain",
    "ethereum",
    "hardhat",
    "smart-contracts",
    "solidity"
  ],
  "license": "MIT",
  "private": true,
  "resolutions": {
    "@ethersproject/wallet": "^5.2.0"
  },
  "scripts": {
    "clean": "hardhat clean",
    "commit": "git-cz",
    "compile": "hardhat compile",
    "coverage": "hardhat coverage --solcoverjs ./.solcover.js --temp artifacts --testfiles \"./test/**/*.ts\"",
    "deploy": "hardhat run scripts/deploy.ts",
    "deployAll": "hardhat run scripts/deployAll.ts",
    "deploy:network": "hardhat run scripts/deploy.ts --network",
    "lint": "npm run lint:sol && npm run lint:ts && npm run prettier:check",
    "lint:sol": "solhint --config ./.solhint.json --max-warnings 0 \"contracts/**/*.sol\"",
    "lint:ts": "eslint --config ./.eslintrc.yaml --ignore-path ./.eslintignore --ext .js,.ts .",
    "prettier": "prettier --config ./.prettierrc --write \"**/*.{js,json,md,sol,ts}\"",
    "prettier:check": "prettier --check --config ./.prettierrc \"**/*.{js,json,md,sol,ts}\"",
    "test": "hardhat run scripts/global-test.ts",
    "test:runner": "NODE_OPTIONS='--max-old-space-size=4096' hardhat run scripts/run-tests.ts",
    "typechain": "hardhat typechain"
  },
  "dependencies": {
    "@nomicfoundation/hardhat-verify": "^2.0.2",
    "@openzeppelin/contracts": "^4.9.3",
    "@types/mocha": "^10.0.6",
    "@uniswap/v3-periphery": "^1.4.4",
    "mocha": "^10.2.0"
  }
}
